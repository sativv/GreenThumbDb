<Window
    x:Class="GreenThumbDb.Windows.SignInWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GreenThumbDb.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SignInWindow"
    Width="500"
    Height="450"
    Background="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" 20" />
            <ColumnDefinition />
            <ColumnDefinition Width=" 20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="2*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>


        <Image
            Grid.Row="1"
            Grid.Column="1"
            Source="C:\Users\david\source\repos\GreenThumbDb\GreenThumbDb\Images\logo.png" />
        <Button
            Name="btnLogin"
            Grid.Row="4"
            Grid.Column="1"
            Width="85"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderBrush="#668239"
            Click="btnLogin_Click"
            Content="Login"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#668239" />

        <Label
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Content="Username"
            FontSize="20"
            FontWeight="SemiBold"
            Foreground="#668239" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Content="Password"
            FontSize="20"
            FontWeight="SemiBold"
            Foreground="#668239" />
        <TextBox
            Name="txtUsername"
            Grid.Row="2"
            Grid.Column="1"
            Width="250"
            Height="40"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="center"
            Background="Transparent"
            BorderBrush="#668239"
            FontSize="20"
            Foreground="#668239" />
        <PasswordBox
            Name="txtPassword"
            Grid.Row="3"
            Grid.Column="1"
            Width="250"
            Height="40"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="center"
            Background="Transparent"
            BorderBrush="#668239"
            Foreground="#668239" />
    </Grid>
</Window>
